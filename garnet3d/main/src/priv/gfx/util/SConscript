Import( 'GN' )
sources = [
    'createRenderer.cpp',
    'effect.cpp',
    'effectFromXml.cpp',
    'fakeRenderer.cpp',
    'fatMesh.cpp',
    'fatMeshLoader.cpp',
    'mesh.cpp',
    'renderable.cpp',
    #'nes.cpp',
]
cluster = GN.newSourceCluster( sources, 'pch.h', 'pch.cpp' )
if GN.conf['has_d3d9'] : cluster.addCompileFlags( CPPDEFINES = ['HAS_D3D9'] )
if GN.conf['has_d3d10'] : cluster.addCompileFlags( CPPDEFINES = ['HAS_D3D10'] )
if GN.conf['has_ogl'] : cluster.addCompileFlags( CPPDEFINES = ['HAS_OGL'] )
GN.newTarget( 'stlib', 'GNgfxUtil', [cluster] )
